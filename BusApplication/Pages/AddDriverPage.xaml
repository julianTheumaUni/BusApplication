<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pages.AddDriverPage"
             Title="Add Driver"
             BackgroundColor ="White"
             xmlns:viewmodel="clr-namespace:BusApplication.ViewModel"
             x:DataType="viewmodel:DriverManagementViewModel"
             >
    <VerticalStackLayout>

        <Label Text="Driver ID" />
        <Entry x:Name="DriverID" Placeholder="Enter Driver ID" Keyboard="Numeric" />

        <Label Text="Date of Birth"   />
        <Entry x:Name="DateOfBirth" Placeholder="Enter Date of Birth" Keyboard="Numeric" />

        <Label Text="Name" />
        <Entry x:Name="Name" Placeholder="Enter Driver Name" Keyboard="Text" />

        <Label Text="Phone Number" />
        <Entry x:Name="PhoneNumber" Placeholder="Enter Driver Phone Number" Keyboard="Numeric" />

        <Label Text="Address" />
        <Entry x:Name="Address" Placeholder="Enter Driver Address" Keyboard="Text" />

        <Label Text="Bus Number" />
        <Entry x:Name="BusNumber" Placeholder="Enter Driver's Bus Number" Keyboard="Numeric" />

        <Button x:Name="submit" Text="Submit" Command="{Binding AddCommand}"/>
    </VerticalStackLayout>
</ContentPage>